{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES3"
  },
  "include": [
    "pages/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}